{
  "name": "serve",
  "version": "2.4.0",
  "description": "Single-command HTTP directory listing and file serving",
  "scripts": {
    "test": "xo"
  },
  "files": [
    "bin",
    "lib",
    "assets",
    "views"
  ],
  "repository": "zeit/serve",
  "bin": {
    "serve": "./bin/serve.js"
  },
  "xo": {
    "esnext": true,
    "space": true,
    "semicolon": false,
    "rules": {
      "babel/no-await-in-loop": 0,
      "import/no-unresolved": 0,
      "complexity": 0,
      "import/no-unassigned-import": 0,
      "unicorn/no-process-exit": 0
    }
  },
  "greenkeeper": {
    "emails": false
  },
  "keywords": [
    "now",
    "serve",
    "micro",
    "http-server"
  ],
  "author": "leo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zeit/serve/issues"
  },
  "homepage": "https://github.com/zeit/serve#readme",
  "devDependencies": {
    "xo": "^0.17.1"
  },
  "dependencies": {
    "args": "^2.2.1",
    "async-to-gen": "^1.3.0",
    "basic-auth": "^1.1.0",
    "chalk": "^1.1.3",
    "copy-paste": "^1.3.0",
    "filesize": "^3.3.0",
    "fs-promise": "^1.0.0",
    "handlebars": "^4.0.6",
    "istextorbinary": "^2.1.0",
    "micro": "^6.1.0",
    "micro-compress": "^1.0.0",
    "mime-types": "^2.1.12",
    "send": "^0.14.1",
    "update-notifier": "^1.0.3"
  }
}

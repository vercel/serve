{
  "name": "serve",
  "version": "4.0.1",
  "description": "Static file serving and directory listing",
  "scripts": {
    "precommit": "npm run test",
    "test": "xo"
  },
  "files": [
    "bin",
    "lib",
    "assets",
    "views"
  ],
  "repository": "zeit/serve",
  "main": "./lib/api.js",
  "bin": {
    "serve": "./bin/serve.js"
  },
  "engines": {
    "node": ">=6.9.0"
  },
  "xo": {
    "esnext": true,
    "space": true,
    "semicolon": false,
    "rules": {
      "complexity": 0,
      "unicorn/no-process-exit": 0,
      "max-params": 0,
      "camelcase": 0
    }
  },
  "keywords": [
    "now",
    "serve",
    "micro",
    "http-server"
  ],
  "author": "leo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zeit/serve/issues"
  },
  "homepage": "https://github.com/zeit/serve#readme",
  "devDependencies": {
    "husky": "0.13.1",
    "xo": "0.17.1"
  },
  "dependencies": {
    "args": "2.3.0",
    "basic-auth": "1.1.0",
    "bluebird": "3.4.7",
    "boxen": "1.0.0",
    "chalk": "1.1.3",
    "copy-paste": "1.3.0",
    "dargs": "5.1.0",
    "detect-port": "1.1.0",
    "filesize": "3.5.5",
    "fs-promise": "2.0.0",
    "handlebars": "4.0.6",
    "ip": "1.1.4",
    "micro": "7.0.6",
    "micro-compress": "1.0.0",
    "mime-types": "2.1.14",
    "node-version": "1.0.0",
    "path-type": "2.0.0",
    "send": "0.15.0",
    "update-notifier": "2.1.0"
  }
}

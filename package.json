{
  "name": "serve",
  "version": "5.2.2",
  "description": "Static file serving and directory listing",
  "scripts": {
    "precommit": "lint-staged",
    "test": "xo"
  },
  "files": [
    "bin",
    "lib",
    "assets",
    "views"
  ],
  "repository": "zeit/serve",
  "main": "./lib/api.js",
  "bin": {
    "serve": "./bin/serve.js"
  },
  "engines": {
    "node": ">=6.9.0"
  },
  "xo": {
    "extends": "prettier"
  },
  "lint-staged": {
    "*.js": [
      "npm run test",
      "prettier --single-quote --no-semi --write",
      "git add"
    ]
  },
  "keywords": [
    "now",
    "serve",
    "micro",
    "http-server"
  ],
  "author": "leo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zeit/serve/issues"
  },
  "homepage": "https://github.com/zeit/serve#readme",
  "devDependencies": {
    "eslint-config-prettier": "2.1.1",
    "husky": "0.13.4",
    "lint-staged": "3.6.0",
    "prettier": "1.4.4",
    "xo": "0.18.2"
  },
  "dependencies": {
    "args": "3.0.2",
    "basic-auth": "1.1.0",
    "bluebird": "3.5.0",
    "boxen": "1.1.0",
    "chalk": "1.1.3",
    "clipboardy": "1.1.2",
    "dargs": "5.1.0",
    "detect-port": "1.2.0",
    "filesize": "3.5.10",
    "fs-extra": "3.0.1",
    "handlebars": "4.0.10",
    "ip": "1.1.5",
    "micro": "7.3.3",
    "micro-compress": "1.0.0",
    "mime-types": "2.1.15",
    "node-version": "1.0.0",
    "opn": "5.0.0",
    "path-type": "2.0.0",
    "send": "0.15.3",
    "update-notifier": "2.2.0"
  }
}

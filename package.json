{
  "name": "serve",
  "version": "6.5.5",
  "description": "Static file serving and directory listing",
  "scripts": {
    "test": "yarn lint && NODE_ENV=test nyc ava",
    "lint": "zeit-eslint --ext .jsx,.js .",
    "lint-staged": "git diff --diff-filter=ACMRT --cached --name-only '*.js' '*.jsx' | xargs zeit-eslint"
  },
  "files": [
    "bin",
    "lib",
    "assets",
    "views"
  ],
  "repository": "zeit/serve",
  "main": "./lib/api.js",
  "bin": {
    "serve": "./bin/serve.js"
  },
  "engines": {
    "node": ">=6.9.0"
  },
  "keywords": [
    "now",
    "serve",
    "micro",
    "http-server"
  ],
  "author": "leo",
  "license": "MIT",
  "devDependencies": {
    "@zeit/eslint-config-node": "0.2.13",
    "@zeit/git-hooks": "0.1.4",
    "ava": "0.25.0",
    "eslint": "4.19.1",
    "node-fetch": "2.1.2",
    "nyc": "11.7.1",
    "test-listen": "1.1.0"
  },
  "dependencies": {
    "args": "4.0.0",
    "basic-auth": "2.0.0",
    "bluebird": "3.5.1",
    "boxen": "1.3.0",
    "chalk": "2.4.0",
    "clipboardy": "1.2.3",
    "dargs": "5.1.0",
    "detect-port": "1.2.2",
    "filesize": "3.6.1",
    "fs-extra": "5.0.0",
    "handlebars": "4.0.11",
    "ip": "1.1.5",
    "micro": "9.1.4",
    "micro-compress": "1.0.0",
    "mime-types": "2.1.18",
    "node-version": "1.1.3",
    "openssl-self-signed-certificate": "1.1.6",
    "opn": "5.3.0",
    "path-is-inside": "1.0.2",
    "path-type": "3.0.0",
    "send": "0.16.2",
    "update-check": "1.3.2"
  },
  "eslintConfig": {
    "extends": [
      "@zeit/eslint-config-node"
    ]
  },
  "git": {
    "pre-commit": "lint-staged"
  }
}